<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProC.View.ComunicacionPage"
             Icon="Comunicacion_Icon.png"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="AddNav_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android" Value="add_button.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <ScrollView>
            <StackLayout>

               <!--Mario estuvo aqui-->
            <Entry x:Name="txtDestino" Placeholder="alguien@ejemplo.com" />
            <Entry x:Name="txtAbout" Placeholder="Asunto" />
            <Editor x:Name="txtBody" AutoSize="TextChanges" Placeholder="Agregue un mensaje."></Editor>
                <Button x:Name="btnSend" Text="Enviar" Clicked="BtnSend_ClickedAsync" BackgroundColor="#008f39"></Button>

        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage> 