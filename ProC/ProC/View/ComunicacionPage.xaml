<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Icon="Comunicacion_Icon.png"
             x:Class="ProC.View.ComunicacionPage" >

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal">
                <Label Text="Comunicacion"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   FontSize="22"
                   TextColor="Black"/>
                <Button Image="add_button.png"
                  BackgroundColor="#FAFAFA"
                        Clicked="AddNav_Clicked"/>
            </StackLayout>
  
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

               <!--Mario estuvo aqui-->
            <Entry x:Name="txtDestino" Placeholder="alguien@ejemplo.com" />
            <Entry x:Name="txtAbout" Placeholder="Asunto" />
            <Editor x:Name="txtBody" AutoSize="TextChanges" Placeholder="Agregue un mensaje."></Editor>
                <Button x:Name="btnSend" Text="Enviar" Clicked="BtnSend_ClickedAsync" BackgroundColor="#008f39"></Button>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage> 