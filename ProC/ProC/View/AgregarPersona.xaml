<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProC.View.AgregarPersona">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="nombre" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Nombre" FontSize="12" HorizontalOptions="FillAndExpand" x:Name="nombre"/>

            <Label Text="apellido" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Apellido" FontSize="12" HorizontalOptions="FillAndExpand" x:Name="apellido"/>

            <Label Text="departamento" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Departamento" FontSize="12" HorizontalOptions="FillAndExpand" x:Name="departamento"/>

            <Label Text="correo" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Correo" FontSize="12" HorizontalOptions="FillAndExpand" x:Name="correo"/>

            <Button Text="Guardar" Clicked="GuardarPersona_Clicked" FontSize="12" HorizontalOptions="FillAndExpand"  x:Name="btnGuardar"/>
            
            <Button Text="Contactar" Clicked="BtnContactar_Clicked" FontSize="12" HorizontalOptions="FillAndExpand"  x:Name="btnContactar"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>